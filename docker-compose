version: '3.8'

services:
  backend:
    build:
      context: .
      dockerfile: Backend/Dockerfile
    ports:
      - "8080:8080"
    environment:
      - ASPNETCORE_ENVIRONMENT=Production
    networks:
      - app-network

  frontend:
    build:
      context: .
      dockerfile: Frontend/Dockerfile
    ports:
      - "3000:80"
    networks:
      - app-network

  frontenduser:
    build:
      context: .
      dockerfile: FrontendUser/Dockerfile
    ports:
      - "3001:80"
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
